    map {
      width: 100%;
      height: 100%;
    }
  }
  .tabkind {
    height: 320rpx;
    position: fixed;
    left: 0;
    transition: all 0.5s;
    -moz-transition: all 0.5s;
    /* Firefox 4 */
    -webkit-transition: all 0.5s;
    /* Safari 和 Chrome */
    -o-transition: all 0.5s;
    width: 100%;
    .tabkind-t {
      text-align: center;
      height: 64rpx;
      box-sizing: border-box;
      padding: 20rpx 0;
