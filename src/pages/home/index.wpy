      }
    }
    .kinds {
      white-space: nowrap;
      height: 256rpx;
      .kindsbox {
        display: inline-block;
        margin-right: 30rpx;
        &:nth-child(1) {
          margin-left: 30rpx;
        }
        width: 400rpx;
        .kinds-t {
          height: 150rpx;
          border-radius: 8rpx;
          image {
            width: 100%;
