<style lang="less">
page {
  height: 100%;
  overflow: hidden;
}
.Home {
  .menu {
    font: 30rpx/88rpx '';
    flex: 1;
    display: flex;
    height: 88rpx;
    color: #999;
    justify-content: space-around;
    box-shadow: 2rpx 20rpx 20rpx rgba(0, 0, 0, 0.15);
    .food,
    .scene,
    .shopping,
    .hotel {
      position: relative;
    }
    .active {
      color: #000;
      &:after {
        content: '';
        position: absolute;
        width: 40rpx;
        height: 8rpx;
        background-color: #c69a5d;
        border-radius: 4rpx;
        bottom: 10rpx;
        left: 0;
