<style lang="less">
page {
  height: 100%;
  overflow: hidden;
}
.Home {
  height: 100%;
  overflow: hidden;
  .menu {
    font: 30rpx/88rpx '';
    flex: 1;
    display: flex;
    height: 88rpx;
    justify-content: space-around;
    .food,
    .rec,
    .scene,
    .shopping,
